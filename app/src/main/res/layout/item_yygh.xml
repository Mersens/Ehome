<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_height="66dp"
        android:layout_width="match_parent"
        android:background="@color/base_color_text_white"
        >
        <ImageView
            android:id="@+id/icon_hosptial"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/pic_hospital1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/hosptial_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#0f2536"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/icon_hosptial"
            android:layout_marginLeft="8dp"
            android:text="郑州大学第一附属医院"
            />
        <ImageView
            android:id="@+id/icon_lift"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_arrow_r"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            />
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1"
        />

</LinearLayout>
