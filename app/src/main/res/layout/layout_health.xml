<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarHeight"
        android:background="@color/actionbar_color"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_data"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:background="@mipmap/switch_left_normal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康数据"
                android:textColor="@color/actionbar_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_files"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:background="@mipmap/switch_right_pressed"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康档案"
                android:textColor="@color/base_color_text_white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

    <RelativeLayout
        android:id="@+id/layout_add_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@mipmap/bg_title"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >

        <ImageView
            android:id="@+id/imageview_new"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"

            android:background="@mipmap/icon_new_data"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="新建数据"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/actionbar_color"

            />
        </LinearLayout>
    </RelativeLayout>
        <View
            android:id="@+id/viewline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorline"/>
        <RelativeLayout
            android:id="@+id/layout_add_chat"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@mipmap/bg_title"
            android:layout_weight="1"
           >
        <LinearLayout
            android:id="@+id/llchat"

            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivnewbace"

                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/icon_new_chart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                />
            <TextView
                android:id="@+id/tv_name_chat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="健康走势"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/actionbar_color"

                />
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
