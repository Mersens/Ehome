<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/base_color_text_white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/base_color_text_white"
            >

            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="姓  名"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="张三"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/icon_lift_name"
                    android:layout_marginRight="4dp"
                    />

                <ImageView
                    android:id="@+id/icon_lift_name"
                    android:layout_width="10dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />

            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="身份证号"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949395"
                    android:textSize="16sp"
                    android:text="请输入身份证号"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/icon_lift_cardid"
                    android:layout_marginRight="4dp"
                    />

                <ImageView
                    android:id="@+id/icon_lift_cardid"
                    android:layout_width="10dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />
            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="手机号"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="15738800385"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/icon_lift_tel"
                    android:layout_marginRight="4dp"
                    />

                <ImageView
                    android:id="@+id/icon_lift_tel"
                    android:layout_width="10dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />
            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="年  龄"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="23"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/icon_lift_age"
                    android:layout_marginRight="4dp"
                    />

                <ImageView
                    android:id="@+id/icon_lift_age"
                    android:layout_width="10dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />
            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="性  别"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="男"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/icon_lift"
                    android:layout_marginRight="4dp"
                    />

                <ImageView
                    android:id="@+id/icon_lift"
                    android:layout_width="10dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <Button
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="确定"
                android:layout_marginTop="48dp"
                android:textColor="@color/base_color_text_white"
                android:gravity="center"
                android:background="@color/actionbar_color"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
