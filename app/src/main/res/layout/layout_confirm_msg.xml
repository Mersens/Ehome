<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/base_color_text_white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/base_color_text_white"
            >

            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/tv_keshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="就诊科室:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="神经内科"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_keshi"
                    android:layout_marginLeft="8dp"

                    />


            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />

            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/tv_jzys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="就诊医生:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="白蓉"
                    android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/tv_jzys"
                    android:layout_marginLeft="8dp"

                    />

            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />
            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/tv_jzsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="就诊时间:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="2016-08-04星期四08:00-09:00"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_jzsj"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:layout_marginRight="4dp"
                    />

            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />
            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/tv_jzr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="就  诊  人:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="张三"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_jzr"
                    android:layout_marginLeft="8dp"
                    />

            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="#e1e1e2"
                />
            <RelativeLayout
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <TextView
                    android:id="@+id/tv_cardid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f2536"
                    android:textSize="16sp"
                    android:text="身份证号:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/actionbar_color"
                    android:textSize="16sp"
                    android:text="41032219930318****"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_cardid"
                    android:layout_marginLeft="8dp"
                    />


            </RelativeLayout>
            <Button
                android:id="@+id/btn_yuyue"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="预约"
                android:layout_marginTop="48dp"
                android:textColor="@color/base_color_text_white"
                android:gravity="center"
                android:background="@color/actionbar_color"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
