<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_paibaogao"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/base_color_text_white">

        <ImageView
            android:id="@+id/ic_paizhao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"

            android:src="@mipmap/icon_paizhao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ic_paizhao"
            android:text="拍报告"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/text_size_large"

            ></TextView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lv_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_dt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@mipmap/bg_title"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:id="@+id/imageview_dt"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/icon_dongtai_pressed"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:id="@+id/tv_dt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="动态"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/actionbar_color"

                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/viewline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorline"/>
        <RelativeLayout
            android:id="@+id/layout_jt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@mipmap/bg_title"
            android:layout_weight="1"
            >
            <LinearLayout
                android:id="@+id/llchat"

                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_jt"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/icon_jingtai_normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:id="@+id/tv_jt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="静态"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_color"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
