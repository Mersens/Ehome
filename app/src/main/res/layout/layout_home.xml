<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical">

    <!--    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

    <com.zzu.ehome.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lrtop"
                android:layout_width="fill_parent"
                android:layout_height="246dip"
                android:background="@mipmap/bg_header">

                <TextView
                    android:id="@+id/day_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"

                    android:singleLine="true"

                    android:textColor="@color/base_color_text_white"

                    android:textSize="14sp" />

                <com.zzu.ehome.view.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/iv_masked"
                    android:layout_width="154dp"
                    android:layout_height="154dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/bg_header_circle" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_masked"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/base_color_text_white"

                    android:textSize="14sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:background="@color/base_color_text_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_record_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivdata"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@mipmap/icon_data"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"

                        android:gravity="center_horizontal"
                        android:text="记录数据"
                        android:textSize="12sp"

                        />

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"

                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorline" />

                <LinearLayout
                    android:id="@+id/ll_record_file"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivrecord"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@mipmap/icon_record"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center_horizontal"
                        android:text="健康档案"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12sp"
                    android:background="@color/colorline" />

                <LinearLayout
                    android:clickable="true"
                    android:id="@+id/ll_record_guahao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivhos"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@mipmap/icon_hospital_home"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"

                        android:gravity="center_horizontal"
                        android:text="预约视频"
                        android:textSize="12sp"

                        />

                </LinearLayout>


            </LinearLayout>


            <com.zzu.ehome.view.ImageCycleView
                android:id="@+id/ad_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:visibility="visible"

                >
                <RelativeLayout
                    android:id="@+id/ll_check_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivreport"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"

                        android:layout_marginLeft="45dp"
                        android:background="@mipmap/icon_tijian"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ivreport"

                        android:layout_centerVertical="true"
                        android:text="体检报告"
                        android:textSize="@dimen/text_size_medium"

                        />

                </RelativeLayout>

                <View

                    android:layout_width="1dp"

                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorline" />
                <RelativeLayout
                    android:id="@+id/ll_ECG_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/ivECG_report"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"

                        android:layout_marginLeft="45dp"
                        android:background="@mipmap/icon_xindian"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ivECG_report"
                        android:layout_marginLeft="12dp"

                        android:layout_centerVertical="true"
                        android:text="心电报告"
                        android:textSize="@dimen/text_size_medium"

                        />

                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_nodate"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="30dp"
                    android:id="@+id/ivnodate"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@mipmap/icon_datanone"
                    android:layout_centerHorizontal="true"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivnodate"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="15dp"

                        android:id="@+id/tv_nodate"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无您的健康数据"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#757c86"/>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/create_case"
                            android:layout_weight="1.0"
                            android:layout_marginLeft="27dp"
                            android:layout_width="150dp"
                            android:layout_height="44dp"
                            android:text="新建数据"
                            android:paddingLeft="12dp"
                            android:gravity="center"
                            android:textColor="@color/base_color_text_white"
                            android:background="@mipmap/btn_creat"
                            android:layout_marginRight="27dp"/>
                        <TextView
                            android:id="@+id/create_history"
                            android:layout_weight="1.0"
                            android:layout_marginLeft="27dp"
                            android:layout_width="150dp"
                            android:layout_height="44dp"
                            android:paddingLeft="12dp"
                            android:text="新建病历"
                            android:gravity="center"
                            android:textColor="@color/base_color_text_white"
                            android:background="@mipmap/btn_creat2"
                            android:layout_marginRight="27dp"/>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_UserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/base_color_text_white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon_zonghe"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/icon_zonghe" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/icon_zonghe"
                            android:paddingLeft="4dp"
                            android:text="综合指标"
                            android:textColor="#0F2536"
                            android:textSize="16sp"

                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"

                                >

                                <TextView
                                    android:id="@+id/tv_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:text="体重："
                                    android:textColor="#0f2536"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_weight_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_weight"

                                    android:textColor="#767c85"
                                    android:textSize="14sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"

                                >

                                <TextView
                                    android:id="@+id/tv_tw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:text="体温："
                                    android:textColor="#0f2536"
                                    android:textSize="14sp" />


                                <TextView
                                    android:id="@+id/tvcankao"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_tw"

                                    android:textColor="#767c85"
                                    android:textSize="14sp" />


                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_xy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:text="血压："
                                    android:textColor="#0f2536"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_jcz1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_xy"
                                    android:text="检测值"
                                    android:textColor="#767c85"
                                    android:textSize="14sp" />

                                <!-- <TextView
                                     android:id="@+id/tv_1"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_centerVertical="true"
                                     android:layout_toRightOf="@+id/tv_jcz1"
                                     android:text="/"
                                     android:textColor="#767c85"
                                     android:textSize="14sp" />-->

                                <!-- <TextView

                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:layout_centerVertical="true"
                                     android:layout_toRightOf="@+id/tv_1"
                                     android:text="参考值"
                                     android:textColor="#E74C3C"
                                     android:textSize="14sp" />-->
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"

                                >

                                <TextView
                                    android:id="@+id/tv_xt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:text="血糖："
                                    android:textColor="#0f2536"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_jcz2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_xt"
                                    android:text="检测值"
                                    android:textColor="#767c85"
                                    android:textSize="14sp" />


                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llysjy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@color/base_color_text_white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon_jy"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/icon_advice_home" />

                        <TextView
                            android:id="@+id/tv_jianyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/icon_jy"
                            android:paddingLeft="4dp"
                            android:text="医生建议"
                            android:textColor="#0F2536"
                            android:textSize="16sp"

                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:id="@+id/text_advice"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textSize="14sp" />
                    <include
                        android:id="@+id/rladvicdmore"
                        layout="@layout/layout_more" />




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llyyjy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@color/base_color_text_white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon_yy"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/icon_medicine" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/icon_yy"
                            android:paddingLeft="4dp"
                            android:text="用药建议"
                            android:textColor="#0F2536"
                            android:textSize="16sp"

                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorline" />

                    <TextView
                        android:id="@+id/tv_medicine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:text="@string/tv_tips"
                        android:textSize="14sp" />
                    <include
                        android:id="@+id/more"
                        layout="@layout/layout_more" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llzoushi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="@color/base_color_text_white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon_zoushi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/icon_qushi" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/icon_zoushi"
                            android:paddingLeft="4dp"
                            android:text="健康走势"
                            android:textColor="#0F2536"
                            android:textSize="16sp"

                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorline" />

                    <LinearLayout
                        android:id="@+id/llhos"
                        android:layout_width="fill_parent"
                        android:layout_height="175dp"
                        android:background="@color/base_color_text_white"
                        android:orientation="vertical">

                        <com.zzu.ehome.view.MyViewPager
                            android:id="@+id/myView_blood"
                            android:layout_weight="6.0"
                            android:layout_width="wrap_content"
                            android:layout_height="140dp" />

                        <RadioGroup
                            android:id="@+id/advertise_point_group"
                            android:layout_width="fill_parent"
                            android:layout_height="10dip"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <RadioButton
                                android:id="@+id/dot01"
                                style="@style/dot_home_style"
                                android:checked="true" />
                            <RadioButton
                                android:id="@+id/dot02"
                                style="@style/dot_home_style"
                                android:layout_marginLeft="10dip"
                                android:checked="false" />
                            <RadioButton
                                android:id="@+id/dot03"
                                style="@style/dot_home_style"
                                android:layout_marginLeft="10dip"
                                android:checked="false" />

                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <include layout="@layout/copyright_layout" />

        </LinearLayout>

    </com.zzu.ehome.view.MyScrollView>
    <!--    </android.support.v4.widget.SwipeRefreshLayout>-->

</LinearLayout>
